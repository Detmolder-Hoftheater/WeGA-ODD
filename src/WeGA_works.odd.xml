                                        <desc versionDate="2014-04-30" xml:lang="de">Markiert einen
                                            Titel einer musikalischen Nummer (z.B. Szene,
                                            Arie).</desc>
                                        <desc versionDate="2014-04-30" xml:lang="en">marks a title
                                            of a musical division (e.g. scene, aria).</desc>
                                    </valItem>
                                    <valItem ident="uniform">
                                        <gloss versionDate="2015-01-23" xml:lang="de"
                                            >Einheitssachtitel</gloss>
                                        <gloss versionDate="2015-01-23" xml:lang="en">uniform
                                            title</gloss>
                                    </valItem>

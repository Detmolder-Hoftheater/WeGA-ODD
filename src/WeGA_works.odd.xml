            <div>
                <schemaSpec ident="wegaWorks" ns="http://www.music-encoding.org/ns/mei"
                    start="mei work source">
                    <moduleRef key="MEI"/>
                    <moduleRef key="MEI.frbr" include="componentGrp expression expressionList item itemList relationList relation"/>
                    <moduleRef key="MEI.shared"
                        include="addrLine address annot artic bibl body chord creation date dir dynam edition extent group identifier incip layer lb mdiv mei music name note p physLoc pubPlace publisher rend repository respStmt rest score scoreDef section space staff staffDef staffGrp tempo title titlePage trill"/>
                    <moduleRef key="MEI.header" include="altId availability change changeDesc classCode classification condition contents contentItem dimensions editionStmt event eventList fileDesc hand handList history incipText incipCode inscription instrVoice instrVoiceGrp instrumentation language langUsage meiHead notesStmt perfMedium physDesc physMedium plateNum price provenance pubStmt revisionDesc seriesStmt source term termList titleStmt useRestrict watermark work workDesc"/>
                    <moduleRef key="MEI.namesdates" include="corpName geogName periodName persName"/>
                    <moduleRef key="MEI.cmn" include="beam beatRpt bTrem fermata fTrem hairpin halfmRpt measure mRest mRpt slur tie tuplet"/>
                    <moduleRef key="MEI.cmnOrnaments" include="trill turn"/>
                    <moduleRef key="MEI.lyrics" include="syl verse"/>
                    <!-- for future use  -->
                    <moduleRef key="MEI.edittrans"
                        include="add damage del gap restore sic subst supplied"/>

                    <specGrpRef target="WeGA_common.odd.xml#wega-patterns"/>
                    <specGrpRef target="WeGA_common.odd.xml#wega-lists"/>
                    <specGrpRef target="WeGA_common.odd.xml#wega-common-atts"/>

